// Variables
$accent = var(--color-accent)
$accentHover = var(--color-accent-hover)
$white = var(--color-white)
$shadow = rgba(54, 162, 169, 0.4)
$shadowHover = rgba(54, 162, 169, 0.6)

.hero
  position relative
  width 100%
  height 600px
  overflow hidden

.heroImage
  width 100%
  height 100%
  position relative

  img
    width 100%
    height 100%
    object-fit cover

.heroOverlay
  position absolute
  top 0
  left 50%
  transform translateX(-50%)
  width 100%
  max-width 1200px
  height 100%
  display flex
  align-items center
  justify-content center
  z-index 2

.heroContent
  text-align left
  color #1a1a1a
  padding 60px 20px
  max-width 900px
  position relative
  z-index 3

  h1
    font-size 48px
    margin-bottom 20px
    line-height 1
    color #1a1a1a

.heroSubtitle
  font-size 20px
  margin-bottom 30px
  line-height 1.6
  color #1a1a1a

.btnPrimary
  background $accent
  color $white
  padding 15px 40px
  font-size 18px
  font-weight 600
  border-radius 5px
  transition all 0.3s ease
  box-shadow 0 4px 15px $shadow

  &:hover
    background $accentHover
    transform translateY(-2px)
    box-shadow 0 6px 20px $shadowHover

@media (max-width: 768px)
  .hero
    height 500px

  .heroContent
    padding 40px 15px

    h1
      font-size 32px
      line-height 0.7

  .heroSubtitle
    font-size 16px

  .btnPrimary
    padding 12px 30px
    font-size 16px

