// Variables
$background = var(--color-background)
$accent = var(--color-accent)
$textSecondary = var(--color-text-secondary)

.aboutDoctor
  background $background

.aboutDoctorContent
  max-width 900px
  margin 0 auto

  h2
    font-size 36px
    margin-bottom 30px
    color $accent
    text-align center

  p
    font-size 18px
    line-height 1.8
    color $textSecondary
    text-align justify

@media (max-width: 768px)
  .aboutDoctorContent h2
    font-size 28px

  .aboutDoctorContent p
    font-size 16px
    text-align left

