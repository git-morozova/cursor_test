// Variables
$background = var(--color-background)
$backgroundLight = var(--color-background-light)
$accent = var(--color-accent)
$shadow = var(--color-shadow)
$shadowHover = var(--color-shadow-hover)

.pricing
  background $background

.pricingTitle
  font-size 36px
  margin-bottom 50px
  color $accent
  text-align center

.pricingGrid
  display grid
  grid-template-columns repeat(3, 1fr)
  gap 30px

.pricingCard
  background $backgroundLight
  border-radius 10px
  overflow hidden
  box-shadow 0 4px 15px $shadow
  transition transform 0.3s ease, box-shadow 0.3s ease
  text-align center

  &:hover
    transform translateY(-5px)
    box-shadow 0 8px 25px $shadowHover

  img
    width 100%
    height 200px
    object-fit cover

  h3
    font-size 20px
    margin 20px
    color $accent
    min-height 60px
    display flex
    align-items center
    justify-content center

.price
  font-size 28px
  font-weight bold
  color $accent
  margin 20px
  padding-bottom 20px

@media (max-width: 968px)
  .pricingGrid
    grid-template-columns repeat(2, 1fr)

@media (max-width: 768px)
  .pricingTitle
    font-size 28px

  .pricingGrid
    grid-template-columns 1fr

  .pricingCard h3
    font-size 18px
    min-height auto

