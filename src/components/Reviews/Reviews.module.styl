// Variables
$background = var(--color-background)
$backgroundLight = var(--color-background-light)
$accent = var(--color-accent)
$textSecondary = var(--color-text-secondary)
$shadow = var(--color-shadow)
$shadowHover = var(--color-shadow-hover)

.reviews
  background $background

.reviewsTitle
  font-size 36px
  margin-bottom 50px
  color $accent
  text-align center

.reviewsGrid
  display grid
  grid-template-columns repeat(2, 1fr)
  gap 30px

.reviewCard
  background $backgroundLight
  padding 30px
  border-radius 10px
  box-shadow 0 4px 15px $shadow
  transition transform 0.3s ease, box-shadow 0.3s ease

  &:hover
    transform translateY(-5px)
    box-shadow 0 8px 25px $shadowHover

.reviewStars
  color #f39c12
  font-size 20px
  margin-bottom 15px

.reviewText
  font-size 16px
  line-height 1.8
  color $textSecondary
  margin-bottom 20px
  font-style italic

.reviewName
  font-weight 600
  color $accent
  text-align right

@media (max-width: 768px)
  .reviewsTitle
    font-size 28px

  .reviewsGrid
    grid-template-columns 1fr
    gap 20px

  .reviewCard
    padding 20px

